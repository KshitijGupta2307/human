rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ─── Helper Functions ───────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ─── Notes folder (PDFs and documents) ──────────────────────
    match /notes/{allPaths=**} {
      // Authenticated users can read/download files
      allow read: if isAuthenticated();

      // Only admins can upload files; max 20 MB, must be PDF
      allow create: if isAdmin() &&
                       request.resource.size < 20 * 1024 * 1024 &&
                       request.resource.contentType.matches('application/pdf');

      // Only admins can overwrite or delete files
      allow update, delete: if isAdmin();
    }

    // ─── Profile pictures ───────────────────────────────────────
    match /profiles/{userId}/{allPaths=**} {
      // Authenticated users can view profile pictures
      allow read: if isAuthenticated();

      // Users can only upload their own profile picture; max 5 MB, must be image
      allow write: if isAuthenticated() &&
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }

    // ─── Deny everything else ───────────────────────────────────
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
