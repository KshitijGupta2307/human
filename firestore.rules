rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user documents
      allow read: if isAuthenticated();
      
      // Users can update their own document, or admins can update any
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Notes collection
    match /notes/{noteId} {
      // Anyone authenticated can read notes
      allow read: if isAuthenticated();
      
      // Only admins can create, update, or delete notes
      allow create, update, delete: if isAdmin();
    }
    
    // Progress collection
    match /progress/{progressId} {
      // Users can read all progress documents (for analytics)
      allow read: if isAuthenticated();
      
      // Users can only create progress for themselves
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Users can only update/delete their own progress
      allow update, delete: if isAuthenticated() && 
                              resource.data.userId == request.auth.uid;
    }
  }
}
